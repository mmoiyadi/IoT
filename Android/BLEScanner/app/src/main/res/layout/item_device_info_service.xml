<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/device_info_layout_group_header"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/background_group_header"
                android:layout_height="wrap_content"
    >

    <ImageButton
        android:id="@+id/device_info_btn_group_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/ic_expand_more_black_24dp"/>

    <TextView
        android:id="@+id/device_info_tv_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/device_info_btn_group_expand"
        android:layout_toStartOf="@+id/device_info_btn_group_expand"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="checkingsdsdksldklskdlskjdlajksdlasjlajsdl"/>

    <TextView
        android:id="@+id/device_info_tv_service_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_info_tv_service_name"
        android:layout_toLeftOf="@+id/device_info_btn_group_expand"
        android:layout_toStartOf="@+id/device_info_btn_group_expand"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="checkingsdsdksldklskdlskjdlajksdlasjlajsdl"/>

    <TextView
        android:id="@+id/device_info_tv_service_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/device_info_btn_group_expand"
        android:layout_below="@id/device_info_tv_service_uuid"
        android:layout_toLeftOf="@+id/device_info_btn_group_expand"
        android:layout_toStartOf="@+id/device_info_btn_group_expand"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="checkingsdsdksldklskdlskjdlajksdlasjlajsdl"/>

</RelativeLayout>