<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="5dp"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:paddingTop="20dp"
              tools:context="com.talentica.blescanner.device.WriteStringDialog">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/write_string_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="asjdlkasjdlaksjdlakjsdljkasdljalsdjalsjdlajksdlajksldjalsdjaljsdlajkdlaksd l laksjdlakjsdlajkd alkjsdalsjdal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:weightSum="4">

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="Write"
            android:textColor="@color/default_text_selector"/>

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="Cancel"
            android:textColor="@color/default_text_selector"/>
    </LinearLayout>

</LinearLayout>
